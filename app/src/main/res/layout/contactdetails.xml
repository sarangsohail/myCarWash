<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/contact_detail_RelativeLayout">


    <EditText
        android:id="@+id/email_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="@string/hint_insert_email"
        android:inputType="textEmailAddress|textPostalAddress" />

    <EditText
        android:id="@+id/thirdLine_address_postcode_et3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="248dp"
        android:ems="10"
        android:hint="LS1 2PL"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/secondline_address_town_et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="194dp"
        android:ems="10"
        android:hint="Leeds"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/first_line_address_et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="138dp"
        android:ems="10"
        android:hint="27 Park Square West"
        android:inputType="textPostalAddress" />

    <TextView
        android:id="@+id/carLocation_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"
        android:fontFamily="serif"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="2dp"
        android:text="Car Location:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="21sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/locationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/thirdLine_address_postcode_et3"
        android:text="Use Current Location"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/car_plate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="175dp"
        android:text="Car Registration Number"
        android:textColor="@color/colorPrimary"
        android:textSize="21sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/numberPlate_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/car_plate_tv"
        android:layout_marginTop="-175dp"
        android:ems="10"
        android:hint="RJ05 PPI"
        android:inputType="text" />


</RelativeLayout>